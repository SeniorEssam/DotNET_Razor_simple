@page
@model AbbyWeb.Pages.Categories.IndexModel

<div class="container p-3"> 
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <br />
        <div class="col-6 text-end">
            <a asp-page="Create" class="btn btn-primary "><i class="bi bi-plus-circle"></i> &nbsp; New Category</a>
        </div>
    </div>
    <br /><br />
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr >
                <th>Category Name</th><th>Display Order</th><th></th>
            </tr>
        </thead>
        @foreach (var obj in Model.Categories)
        {
            <tbody>
                <tr style="margin-top:0">
                    <td style="width:50%">@obj.Name</td>
                    <td style="width:39%">@obj.DisplayOrder</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>                        
                        <a asp-page="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>

                    </td>
                </tr>
            </tbody>
        }
    </table>
</div>
