@page
@model AbbyWeb.Pages.Categories.DeleteModel
<form method="post">
    <input hidden asp-for="Category.Id"/>
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
        </div>
        <br />
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input disabled asp-for="Category.Name" class="form-control" /> 
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input disabled asp-for="Category.DisplayOrder" class="form-control" />
        </div>
        <button class="btn btn-danger" style="width:150px"> Delete </button>
        <a asp-page="Index" class="btn btn-secondary" style="width:150px"> Back To List</a>
    </div>
</form>
@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}